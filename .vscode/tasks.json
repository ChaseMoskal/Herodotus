{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"]
        },
        {
            "isBuildCommand": true,
            "taskName": "build",
            "args": ["run", "build", "--silent"]
        },
        {
            "taskName": "start",
            "args": ["run", "start"]
        }
    ]
}
